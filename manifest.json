{
  "manifest_version": 3,
  "name": "SEO Assistant",
  "version": "1.0.0",
  "description": "SEO Assistant是一款强大的SEO工具，帮助用户分析关键词并生成高质量的SEO优化文章",
  "permissions": [
    "storage",
    "sidePanel",
    "tabs",
    "activeTab"
  ],
  "host_permissions": [
    "https://api.semrush.com/*",
    "https://serpapi.com/*",
    "https://api.deepseek.com/*",
    "https://dashscope.aliyuncs.com/*",
    "https://api.volcengine.com/*",
    "https://www.googleapis.com/*"
  ],
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "action": {
    "default_title": "SEO Assistant",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "options_page": "options.html",
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "author": "SEO Assistant Team",
  "homepage_url": "https://github.com/yourusername/seo-assistant",
  "short_name": "SEO助手"
}